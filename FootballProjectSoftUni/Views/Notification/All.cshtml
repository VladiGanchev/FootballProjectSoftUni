@using FootballProjectSoftUni.Core.Models.ContactMessage
@using FootballProjectSoftUni.Core.Models.Notification
@using X.PagedList
@model NotificationAllPageViewModel

@{
    ViewData["Title"] = "Известия и съобщения";
}

<h2 class="mb-3">Известия и съобщения</h2>

<div class="mb-3">
    <a asp-controller="Notification"
       asp-action="All"
       asp-route-box="inbox"
       class="btn @(Model.Box == "inbox" ? "btn-primary" : "btn-outline-primary") me-2">
        📥 Входящи
    </a>

    <a asp-controller="Notification"
       asp-action="All"
       asp-route-box="sent"
       class="btn @(Model.Box == "sent" ? "btn-primary" : "btn-outline-primary")">
        📤 Изпратени
    </a>
</div>

<hr />

@if (Model.Box == "sent")
{
    <h4>Изпратени съобщения</h4>

    @if (Model.SentMessages == null || !Model.SentMessages.Any())
    {
        <div class="alert alert-light">Нямате изпратени съобщения.</div>
    }
    else
    {
        var paged = (IPagedList<SentMessageViewModel>)Model.SentMessages;

        <div class="list-group mb-3">
            @foreach (var msg in paged)
            {
                <div class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <a asp-controller="ContactMessage"
                           asp-action="OpenMessage"
                           asp-route-messageId="@msg.Id"
                           class="fw-bold text-primary text-decoration-none">
                            @msg.Subject
                        </a>

                        <div class="text-muted small">
                            Изпратено към: @msg.ToName
                        </div>

                        <small class="text-muted">
                            @msg.CreatedOn.ToLocalTime().ToString("g")
                        </small>
                    </div>
                </div>
            }
        </div>

        <nav aria-label="Page navigation">
            <ul class="pagination">
                @{
                    var nextPage = paged.PageNumber + 1;
                    var previousPage = paged.PageNumber - 1;
                }

                <li class="page-item @(paged.HasPreviousPage ? "" : "disabled")">
                    <a class="page-link"
                       href="@Url.Action("All", new { box = "sent", page = previousPage })"
                       tabindex="-1">Previous</a>
                </li>

                @for (int i = 1; i <= paged.PageCount; i++)
                {
                    <li class="page-item @(i == paged.PageNumber ? "active" : "")">
                        <a class="page-link"
                           href="@Url.Action("All", new { box = "sent", page = i })">@i</a>
                    </li>
                }

                <li class="page-item @(paged.HasNextPage ? "" : "disabled")">
                    <a class="page-link"
                       href="@Url.Action("All", new { box = "sent", page = nextPage })">Next</a>
                </li>
            </ul>
        </nav>
    }
}
else
{
    <h4>Входящи нотификации</h4>

    @if (Model.Notifications == null || !Model.Notifications.Any())
    {
        <div class="alert alert-info">
            Нямате нотификации.
        </div>
    }
    else
    {
        var paged = (IPagedList<NotificationViewModel>)Model.Notifications;

        <div class="list-group mb-3">
            @foreach (var notification in paged)
            {
                <div class="list-group-item d-flex justify-content-between align-items-center @(notification.IsRead ? "bg-light" : "bg-white")">
                    <div>
                        @* Линк към съобщението, текст, дата и т.н. *@
                        @if (notification.ContactMessageId != null)
                        {
                            <a asp-controller="ContactMessage"
                               asp-action="OpenMessage"
                               asp-route-messageId="@notification.ContactMessageId"
                               class="fw-bold text-primary text-decoration-none">
                                @notification.Message
                            </a>

                            @if (!string.IsNullOrWhiteSpace(notification.FromName))
                            {
                                <div class="text-muted small">
                                    Получено от: @notification.FromName
                                </div>
                            }
                        }
                        else
                        {
                            <span>@notification.Message</span>
                        }

                        <small class="text-muted d-block mt-1">
                            @notification.CreatedOn.ToLocalTime().ToString("g")
                        </small>
                    </div>

                    <div class="d-flex align-items-center">
                        @if (!notification.IsRead)
                        {
                            <span class="badge bg-primary me-2">New</span>
                        }

                        <form asp-controller="Notification"
                              asp-action="Delete"
                              method="post"
                              onsubmit="return confirm('Сигурен ли си, че искаш да изтриеш тази нотификация?');">
                            <input type="hidden" name="id" value="@notification.Id" />
                            <input type="hidden" name="box" value="@Model.Box" />
                            @* по желание може да подадеш и page *@
                            <button type="submit" class="btn btn-sm btn-outline-danger">🗑</button>
                        </form>
                    </div>
                </div>

            }
        </div>

        <nav aria-label="Page navigation">
            <ul class="pagination">
                @{
                    var nextPage = paged.PageNumber + 1;
                    var previousPage = paged.PageNumber - 1;
                }

                <li class="page-item @(paged.HasPreviousPage ? "" : "disabled")">
                    <a class="page-link"
                       href="@Url.Action("All", new { box = "inbox", page = previousPage })"
                       tabindex="-1">Previous</a>
                </li>

                @for (int i = 1; i <= paged.PageCount; i++)
                {
                    <li class="page-item @(i == paged.PageNumber ? "active" : "")">
                        <a class="page-link"
                           href="@Url.Action("All", new { box = "inbox", page = i })">@i</a>
                    </li>
                }

                <li class="page-item @(paged.HasNextPage ? "" : "disabled")">
                    <a class="page-link"
                       href="@Url.Action("All", new { box = "inbox", page = nextPage })">Next</a>
                </li>
            </ul>
        </nav>
    }
}
