@using FootballProjectSoftUni.Core.Models.Team;
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}
@model TeamRegistrationViewModel

@{
    ViewData["Title"] = "Join Team";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<hr />

<form asp-action="JoinTeam" method="post">
    <div class="mb-3">
        <label asp-for="TeamName" class="form-label">Team Name</label>
        <input asp-for="TeamName" class="form-control" />
        <span asp-validation-for="TeamName" class="text-danger"></span>
    </div>

    <h3>Players Information</h3>
    @for (int i = 0; i < 10; i++)
    {
        <div class="row mb-3">
            <div class="col">
                <label asp-for="@Model.Players[i].Name" class="form-label">Player Name</label>
                <input asp-for="@Model.Players[i].Name" class="form-control" />
                <span asp-validation-for="@Model.Players[i].Name" class="text-danger"></span>
            </div>
            <div class="col">
                <label asp-for="@Model.Players[i].BirthDate" class="form-label">Date of Birth</label>
                <input asp-for="@Model.Players[i].BirthDate" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Players[i].BirthDate" class="text-danger"></span>
            </div>
        </div>
    }
    <button type="submit" class="btn btn-primary">Register</button>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


