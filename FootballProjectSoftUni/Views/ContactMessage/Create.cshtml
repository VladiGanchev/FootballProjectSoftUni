@using FootballProjectSoftUni.Core.Models.Message
@model ContactFormViewModel

@{
    ViewData["Title"] = "Свържи се с организаторите";
}

<section class="container py-4">

    <div class="text-center mb-4">
        <h2 class="page-title mb-1">
            <i class="bi bi-envelope-paper-heart-fill me-2"></i>
            @ViewData["Title"]
        </h2>
        <p class="text-muted mb-0">
            Изпрати съобщение до екипа. Ще ти отговорим възможно най-скоро.
        </p>
    </div>

    @* Alerts (optional - ако ползваш TempData) *@
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            @TempData["ErrorMessage"]
        </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>
            @TempData["SuccessMessage"]
        </div>
    }

    <div class="admin-form-card mx-auto">
        <form asp-action="Create" method="post" class="admin-form">

            <div class="mb-3">
                <label asp-for="Subject" class="form-label fw-bold">
                    <i class="bi bi-chat-left-text-fill me-2"></i>Тема
                </label>

                <input asp-for="Subject" class="form-control tg-input" placeholder="Напр. Въпрос за турнир..." />
                <span asp-validation-for="Subject" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Content" class="form-label fw-bold">
                    <i class="bi bi-pencil-square me-2"></i>Вашето съобщение
                </label>

                <textarea asp-for="Content"
                          class="form-control tg-input"
                          rows="6"
                          placeholder="Опиши въпроса си възможно най-детайлно..."></textarea>

                <span asp-validation-for="Content" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-success btn-lg w-100 tg-action-btn">
                <i class="bi bi-send-fill me-2"></i>
                Изпрати
            </button>

        </form>
    </div>

</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
