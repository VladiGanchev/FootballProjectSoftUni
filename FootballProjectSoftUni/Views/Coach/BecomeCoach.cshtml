@using FootballProjectSoftUni.Core.Models.Coach
@model CoachViewModel

@{
    ViewBag.Title = "Become a Coach";
}

<section class="container py-4">

    <div class="text-center mb-4">
        <h2 class="page-title mb-1">
            <i class="bi bi-person-badge-fill me-2"></i>
            Become a Coach
        </h2>

        <p class="text-muted mb-0">
            Трябва да станеш треньор, за да можеш да регистрираш отбор.
        </p>
    </div>

    <div class="admin-form-card mx-auto">

        <form asp-action="BecomeCoach" method="post">
            <input type="hidden" name="tournamentId" value="@ViewBag.TournamentId" />

            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label fw-bold">
                    <i class="bi bi-person-fill me-2"></i>Name
                </label>

                <input asp-for="@Model.Name"
                       class="form-control form-control-lg tg-input"
                       placeholder="Enter your name..." />

                <span asp-validation-for="@Model.Name" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.Experience" class="form-label fw-bold">
                    <i class="bi bi-graph-up me-2"></i>Experience (Years)
                </label>

                <input asp-for="@Model.Experience"
                       class="form-control form-control-lg tg-input"
                       placeholder="Years of experience..." />

                <span asp-validation-for="@Model.Experience" class="text-danger small"></span>
            </div>

            <button class="btn btn-warning btn-lg w-100 tg-action-btn" type="submit">
                <i class="bi bi-check-circle-fill me-2"></i>
                Become Coach
            </button>

        </form>

    </div>

</section>
