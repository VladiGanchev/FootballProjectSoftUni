@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="auth-wrap">
    <div class="auth-card">
        <div class="auth-head text-center">
            <div class="auth-logo">
                <i class="bi bi-trophy-fill"></i>
            </div>
            <h1 class="auth-title mb-1">Log in</h1>
            <p class="auth-subtitle mb-0">Welcome back to Tournament Galaxy</p>
        </div>

        <hr class="auth-hr" />

        <form id="account" method="post" class="auth-form">
            <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control auth-input" autocomplete="username" aria-required="true" placeholder="Email" />
                <label asp-for="Input.Email" class="form-label">
                    <i class="bi bi-envelope-fill me-2"></i>Email
                </label>
                <span asp-validation-for="Input.Email" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control auth-input" autocomplete="current-password" aria-required="true" placeholder="Password" />
                <label asp-for="Input.Password" class="form-label">
                    <i class="bi bi-lock-fill me-2"></i>Password
                </label>
                <span asp-validation-for="Input.Password" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="form-check">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label asp-for="Input.RememberMe" class="form-check-label">
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>

                <a id="forgot-password" class="auth-link" asp-page="./ForgotPassword">
                    Forgot password?
                </a>
            </div>

            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary auth-btn">
                <i class="bi bi-box-arrow-in-right me-2"></i>Log in
            </button>

            <div class="text-center mt-3">
                <span class="text-muted">No account?</span>
                <a class="auth-link ms-1" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">
                    Register
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
