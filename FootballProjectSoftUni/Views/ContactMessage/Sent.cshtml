@using FootballProjectSoftUni.Core.Models.ContactMessage
@using FootballProjectSoftUni.Core.Models.Message
@model IEnumerable<MessageListViewModel>

@{
    ViewData["Title"] = "Изпратени съобщения";
}

<section class="container py-4">

    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-end gap-3 mb-4">
        <div>
            <h2 class="page-title mb-1">
                <i class="bi bi-send-fill me-2"></i>
                @ViewData["Title"]
            </h2>
            <p class="text-muted mb-0">
                Прегледай съобщенията, които си изпратил.
            </p>
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="empty-state text-center">
            <i class="bi bi-envelope display-4 text-muted"></i>
            <h5 class="mt-3">Нямате изпратени съобщения</h5>
            <p class="text-muted mb-0">
                Когато изпратите съобщение, ще се появи тук.
            </p>
        </div>
    }
    else
    {
        <div class="tg-table-card">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0 tg-table">
                    <thead>
                        <tr>
                            <th class="fw-bold">
                                <i class="bi bi-chat-left-text-fill me-2"></i>Тема
                            </th>
                            <th class="fw-bold">
                                <i class="bi bi-eye-fill me-2"></i>Преглед
                            </th>
                            <th class="fw-bold text-nowrap">
                                <i class="bi bi-calendar-event-fill me-2"></i>Дата
                            </th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var msg in Model)
                        {
                            <tr>
                                <td style="max-width: 360px;">
                                    <a asp-controller="ContactMessage"
                                       asp-action="OpenMessage"
                                       asp-route-messageId="@msg.Id"
                                       class="tg-msg-link">
                                        <i class="bi bi-envelope-check-fill me-2 text-success"></i>
                                        @msg.Subject
                                    </a>
                                </td>

                                <td class="text-muted" style="max-width: 520px;">
                                    <div class="text-truncate">
                                        @msg.Preview
                                    </div>
                                </td>

                                <td class="text-nowrap text-muted fw-semibold">
                                    @msg.CreatedOn.ToLocalTime().ToString("g")
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    }

</section>
