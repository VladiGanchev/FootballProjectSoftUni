@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="auth-wrap">
    <div class="auth-card">

        <div class="auth-head text-center">
            <div class="auth-logo">
                <i class="bi bi-key-fill"></i>
            </div>
            <h1 class="auth-title mb-1">Forgot Password</h1>
            <p class="auth-subtitle mb-0">
                Enter your email to receive password reset instructions
            </p>
        </div>

        <hr class="auth-hr" />

        <form method="post" class="auth-form">

            <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email"
                       class="form-control auth-input"
                       autocomplete="username"
                       aria-required="true"
                       placeholder="Email" />

                <label asp-for="Input.Email">
                    <i class="bi bi-envelope-fill me-2"></i>Email
                </label>

                <span asp-validation-for="Input.Email" class="text-danger small"></span>
            </div>

            <button type="submit" class="w-100 btn btn-lg btn-primary auth-btn">
                <i class="bi bi-arrow-repeat me-2"></i>Reset Password
            </button>

            <div class="text-center mt-3">
                <a class="auth-link" asp-page="./Login">
                    Back to Login
                </a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
