@model FootballProjectSoftUni.Core.Models.Referee.RefereeInviteFormViewModel

@{
    ViewData["Title"] = "Покани рефер";
}

<section class="container py-4">

    <div class="text-center mb-4">
        <h2 class="page-title mb-1">
            <i class="bi bi-person-plus-fill me-2"></i>
            @ViewData["Title"]
        </h2>
        <p class="text-muted mb-0">
            Избери рефер и изпрати покана за участие в турнир.
        </p>
    </div>

    <div class="admin-form-card mx-auto">

        <form asp-action="Invite" method="post" class="admin-form">

            <div class="mb-3">
                <label class="form-label fw-bold">
                    <i class="bi bi-whistle-fill me-2"></i>Рефер
                </label>

                <select asp-for="RefereeId"
                        asp-items="Model.Referees"
                        class="form-select form-select-lg tg-select">
                    <option value="">-- избери рефер --</option>
                </select>

                <span asp-validation-for="RefereeId" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Subject" class="form-label fw-bold">
                    <i class="bi bi-chat-left-text-fill me-2"></i>Тема
                </label>

                <input asp-for="Subject"
                       class="form-control tg-input"
                       placeholder="Напр. Покана за турнир..." />

                <span asp-validation-for="Subject" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Content" class="form-label fw-bold">
                    <i class="bi bi-pencil-square me-2"></i>Съобщение
                </label>

                <textarea asp-for="Content"
                          class="form-control tg-input"
                          rows="6"
                          placeholder="Напиши текста на поканата..."></textarea>

                <span asp-validation-for="Content" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-primary btn-lg w-100 tg-action-btn">
                <i class="bi bi-send-fill me-2"></i>
                Изпрати поканата
            </button>

        </form>

    </div>

</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
