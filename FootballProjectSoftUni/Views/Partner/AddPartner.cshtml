@model FootballProjectSoftUni.Core.Models.Partner.PartnerViewModel

@{
    ViewData["Title"] = "Add Partner";
}

<section class="container py-4">

    <div class="text-center mb-4">
        <h2 class="page-title mb-1">
            <i class="bi bi-handshake-fill me-2"></i>
            Add Partner
        </h2>

        <p class="text-muted mb-0">
            Добави нов партньор и неговото лого.
        </p>
    </div>

    <div class="admin-form-card mx-auto">

        <form method="post">

            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-bold">
                    <i class="bi bi-building me-2"></i>Partner Name
                </label>

                <input asp-for="Name"
                       class="form-control form-control-lg tg-input"
                       placeholder="Partner name..." />

                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ImageUrl" class="form-label fw-bold">
                    <i class="bi bi-image-fill me-2"></i>Image URL
                </label>

                <input asp-for="ImageUrl"
                       class="form-control form-control-lg tg-input"
                       placeholder="https://..."
                       id="imageInput" />

                <span asp-validation-for="ImageUrl" class="text-danger small"></span>
            </div>

            <!-- Preview -->
            <div class="text-center mb-3">
                <img id="previewImage"
                     class="partner-preview shadow"
                     style="display:none;" />
            </div>

            <button class="btn btn-primary btn-lg w-100 tg-action-btn">
                <i class="bi bi-plus-circle-fill me-2"></i>Add Partner
            </button>

        </form>

    </div>

</section>

@section Scripts {
    <script>
        document.getElementById("imageInput").addEventListener("input", function () {

            const img = document.getElementById("previewImage");
            const url = this.value;

            if (url && url.startsWith("http")) {
                img.src = url;
                img.style.display = "block";
            } else {
                img.style.display = "none";
            }

        });
    </script>
}
