@model List<FootballProjectSoftUni.Core.Models.City.BestTeamViewModel>

@{
    ViewData["Title"] = "City Leaders";
}

<h2 class="text-center mb-4">Top Teams in this City</h2>

<div class="row">
    @if (Model != null && Model.Count > 0)
    {
        foreach (var team in Model)
        {
            <div class="card col-md-4 mb-3" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">@team.TeamName</h5>
                    <p class="card-text"><strong>Coach:</strong> @team.CoachName</p>
                    <p class="card-text"><strong>Wins in City:</strong> @team.WinsInCity</p>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="alert alert-info text-center" role="alert">
                No teams found in this city yet.
            </div>
        </div>
    }
</div>

<div class="mt-3">
    <a asp-controller="City" asp-action="All" class="btn btn-secondary">Back to Cities</a>
</div>
