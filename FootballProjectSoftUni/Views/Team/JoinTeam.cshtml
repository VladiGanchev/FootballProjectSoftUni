@using FootballProjectSoftUni.Core.Models.Team
@model TeamRegistrationViewModel

@{
    ViewData["Title"] = "Join Team";
}

<section class="container py-4">

    @* Alerts *@
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            @TempData["ErrorMessage"]
        </div>
    }

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <div asp-validation-summary="All"></div>
        </div>
    }

    <div class="text-center mb-4">
        <h2 class="page-title mb-1">
            <i class="bi bi-people-fill me-2"></i>
            @ViewData["Title"]
        </h2>
        <p class="text-muted mb-0">
            Въведи име на отбор и попълни играчите.
        </p>
    </div>

    <div class="admin-form-card mx-auto" style="max-width: 760px;">

        <form asp-action="JoinTeam" method="post" class="admin-form">

            <div class="mb-3">
                <label asp-for="TeamName" class="form-label fw-bold">
                    <i class="bi bi-shield-fill me-2"></i>Team Name
                </label>
                <input asp-for="TeamName" class="form-control tg-input" placeholder="Enter team name..." />
                <span asp-validation-for="TeamName" class="text-danger small"></span>
            </div>

            <hr class="my-4" />

            <div class="d-flex align-items-center justify-content-between mb-2">
                <h4 class="mb-0 fw-bold">
                    <i class="bi bi-person-lines-fill me-2"></i>Players Information
                </h4>
                <span class="text-muted small">10 players</span>
            </div>

            <div class="row g-3 mt-1">
                @for (int i = 0; i < 10; i++)
                {
                    <div class="col-12 col-md-6">
                        <div class="player-card">
                            <label asp-for="@Model.Players[i].Name" class="form-label fw-bold mb-2">
                                <i class="bi bi-person-fill me-2"></i>Player @(i + 1)
                            </label>

                            <input asp-for="@Model.Players[i].Name"
                                   class="form-control tg-input"
                                   placeholder="Player name..." />

                            <span asp-validation-for="@Model.Players[i].Name" class="text-danger small"></span>
                        </div>
                    </div>
                }
            </div>

            <button type="submit" class="btn btn-primary btn-lg w-100 tg-action-btn mt-4">
                <i class="bi bi-check-circle-fill me-2"></i>
                Register
            </button>

        </form>

    </div>

</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
