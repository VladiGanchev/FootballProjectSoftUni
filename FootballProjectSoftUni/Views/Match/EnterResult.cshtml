@using FootballProjectSoftUni.Core.Models.Match
@model EnterResultViewModel

@{
    ViewBag.Title = "Въведи резултат";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<form asp-action="EnterResult" method="post">
    <input type="hidden" asp-for="MatchId" />
    <input type="hidden" asp-for="TournamentId" />
    <input type="hidden" asp-for="Team1Id" />
    <input type="hidden" asp-for="Team2Id" />
    <input type="hidden" asp-for="Team1Name" />
    <input type="hidden" asp-for="Team2Name" />

    <div class="row">

        <div class="col-md-6 border-end">
            <h4 class="text-center">@Model.Team1Name</h4>

            <div class="mb-3">
                <label asp-for="Team1Goals" class="form-label">Голове</label>
                <input asp-for="Team1Goals" class="form-control" type="number" min="0" />
                <span asp-validation-for="Team1Goals" class="text-danger"></span>
            </div>

            @if (Model.Team1Id.HasValue)
            {
                <div class="form-check">
                    <input class="form-check-input"
                           type="radio"
                           asp-for="WinnerTeamId"
                           value="@Model.Team1Id.Value" />
                    <label class="form-check-label">
                        Победител: @Model.Team1Name
                    </label>
                </div>
            }
        </div>

        <div class="col-md-6">
            <h4 class="text-center">@Model.Team2Name</h4>

            <div class="mb-3">
                <label asp-for="Team2Goals" class="form-label">Голове</label>
                <input asp-for="Team2Goals" class="form-control" type="number" min="0" />
                <span asp-validation-for="Team2Goals" class="text-danger"></span>
            </div>

            @if (Model.Team2Id.HasValue)
            {
                <div class="form-check">
                    <input class="form-check-input"
                           type="radio"
                           asp-for="WinnerTeamId"
                           value="@Model.Team2Id.Value" />
                    <label class="form-check-label">
                        Победител: @Model.Team2Name
                    </label>
                </div>
            }
        </div>

    </div>

    <div class="mt-2 text-center">
        <span asp-validation-for="WinnerTeamId" class="text-danger fw-bold"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-4 w-100 fw-bold">
        Запази резултат
    </button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
