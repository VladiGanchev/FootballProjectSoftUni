@model IEnumerable<FootballProjectSoftUni.Core.Models.Partner.PartnerViewModel>

@{
    ViewData["Title"] = "Our Partners";
}

<section class="container py-4">

    @if (Model.Any())
    {
        <div class="row g-4 justify-content-center">

            @foreach (var partner in Model)
            {
                <div class="col-6 col-md-4 col-lg-3 col-xl-2">

                    <div class="partner-card text-center">

                        <div class="partner-logo-wrapper">
                            <img src="@partner.ImageUrl"
                                 alt="@partner.Name"
                                 class="partner-logo" />
                        </div>

                        <h6 class="partner-name mt-3">
                            @partner.Name
                        </h6>

                    </div>

                </div>
            }

        </div>
    }
    else
    {
        <div class="empty-state text-center">

            <i class="bi bi-people display-4 text-muted"></i>

            <h5 class="mt-3">Няма добавени партньори</h5>

            <p class="text-muted">
                Партньорите ще се появят тук, когато бъдат добавени към платформата.
            </p>

        </div>
    }

</section>
