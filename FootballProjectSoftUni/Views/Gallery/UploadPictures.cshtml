@{
    ViewBag.Title = "Upload Pictures";
}

<section class="container py-4">

    <div class="text-center mb-4">
        <h2 class="page-title mb-1">
            <i class="bi bi-cloud-upload-fill me-2"></i>
            Upload Pictures for Tournament
        </h2>
        <p class="text-muted mb-0">
            Качи една или повече снимки към турнира.
        </p>
    </div>

    <div class="admin-form-card mx-auto">

        <form asp-action="UploadPictures" method="post" enctype="multipart/form-data" class="admin-form">

            <input type="hidden" name="id" value="@ViewBag.TournamentId" />

            <div class="mb-3">
                <label class="form-label fw-bold">
                    <i class="bi bi-images me-2"></i>Select pictures
                </label>

                <input type="file"
                       name="files"
                       multiple
                       class="form-control tg-input" />
            </div>

            <button type="submit" class="btn btn-warning btn-lg w-100 fw-bold tg-action-btn">
                <i class="bi bi-upload me-2"></i>
                Upload
            </button>

        </form>

    </div>

</section>
