@using FootballProjectSoftUni.Core.Models.Referee;
@model RefereeFormViewMOdel

@{
    ViewBag.Title = "Become Referee";
}

<section class="container py-4">

    <div class="text-center mb-4">
        <h2 class="page-title mb-1">
            <i class="bi bi-whistle-fill me-2"></i>
            @ViewBag.Title
        </h2>
        <p class="text-muted mb-0">
            Попълни информацията, за да кандидатстваш като съдия.
        </p>
    </div>

    <div class="admin-form-card mx-auto">

        <form asp-action="BecomeReferee" method="post" class="admin-form">

            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label fw-bold">
                    <i class="bi bi-person-fill me-2"></i>Full Name
                </label>

                <input asp-for="@Model.Name"
                       class="form-control tg-input"
                       aria-required="true"
                       placeholder="Enter full name" />

                <span asp-validation-for="@Model.Name" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.Birthdate" class="form-label fw-bold">
                    <i class="bi bi-calendar-event-fill me-2"></i>Birthdate
                </label>

                <input asp-for="@Model.Birthdate"
                       class="form-control tg-input"
                       aria-required="true"
                       value="@DateTime.Now.ToString("dd/MM/yyyy HH:mm")" />

                <span asp-validation-for="@Model.Birthdate" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.Experience" class="form-label fw-bold">
                    <i class="bi bi-award-fill me-2"></i>Experience
                </label>

                <input asp-for="@Model.Experience"
                       class="form-control tg-input"
                       placeholder="Years of experience / description" />

                <span asp-validation-for="@Model.Experience" class="text-danger small"></span>
            </div>

            <button type="submit"
                    class="btn btn-warning btn-lg w-100 fw-bold tg-action-btn">
                <i class="bi bi-check-circle-fill me-2"></i>
                Apply
            </button>

        </form>

    </div>

</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
