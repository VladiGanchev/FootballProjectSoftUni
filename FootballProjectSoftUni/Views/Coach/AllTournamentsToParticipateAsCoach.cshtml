@using FootballProjectSoftUni.Core.Models.Tournament
@using FootballProjectSoftUni.Infrastructure.Data.Enums
@model IEnumerable<TournamentViewModel>

@{
    ViewData["Title"] = "Tournaments To Participate As Coach";
}

<section class="container py-4">

    <div class="text-center mb-4">
        <h2 class="page-title mb-1">
            <i class="bi bi-calendar2-check-fill me-2"></i>
            @ViewData["Title"]
        </h2>
        <p class="text-muted mb-0">
            Турнири, в които участваш като треньор.
        </p>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row g-4">
            @foreach (var e in Model)
            {
                <div class="col-12 col-sm-6 col-lg-4">
                    <div class="tournament-card h-100">

                        <div class="tournament-cover">
                            <img src="@e.ImageUrl" alt="Tournament Image" />
                            <div class="tournament-cover__overlay"></div>

                            <div class="tournament-top">
                                <span class="badge tournament-pill">
                                    <i class="bi bi-geo-alt-fill me-1"></i>@e.CityName
                                </span>

                                @{
                                    string statusText;
                                    string statusClass;

                                    if (e.StartDate > DateTime.Now)
                                    {
                                        statusText = TournamentStatus.Upcoming.ToString();
                                        statusClass = "status-upcoming";
                                    }
                                    else if (DateTime.Now > e.StartDate && DateTime.Now < e.EndDate)
                                    {
                                        statusText = TournamentStatus.Started.ToString();
                                        statusClass = "status-started";
                                    }
                                    else
                                    {
                                        statusText = TournamentStatus.Finished.ToString();
                                        statusClass = "status-finished";
                                    }
                                }

                                <span class="badge tournament-status @statusClass">
                                    <i class="bi bi-activity me-1"></i>@statusText
                                </span>
                            </div>
                        </div>

                        <div class="p-3">
                            <div class="tournament-meta">
                                <div class="tmeta">
                                    <i class="bi bi-calendar-event me-2"></i>
                                    <span><strong>Start:</strong> @e.StartDate</span>
                                </div>

                                <div class="tmeta">
                                    <i class="bi bi-calendar-x me-2"></i>
                                    <span><strong>End:</strong> @e.EndDate</span>
                                </div>

                                <div class="tmeta">
                                    <i class="bi bi-people-fill me-2"></i>
                                    <span><strong>Teams:</strong> @($"{e.NumberOfTeams} / 16")</span>
                                </div>
                            </div>

                            <a asp-controller="Coach"
                               asp-action="LeaveTournament"
                               asp-route-id="@e.Id"
                               class="btn btn-warning w-100 fw-bold city-btn mt-3">
                                <i class="bi bi-box-arrow-right me-2"></i>Leave Tournament
                            </a>
                        </div>

                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state text-center">
            <i class="bi bi-calendar2-x display-4 text-muted"></i>
            <h5 class="mt-3">Няма турнири</h5>
            <p class="text-muted mb-0">
                Все още не участваш в турнири като треньор.
            </p>
        </div>
    }

</section>
