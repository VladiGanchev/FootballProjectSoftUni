@using System.Security.Claims;
@using FootballProjectSoftUni.Infrastructure.Data.Enums;
@using FootballProjectSoftUni.Core.Models.Tournament;
@model IEnumerable<TournamentViewModel>

@{
    ViewData["Title"] = "Tournaments To Referee";
}

<section class="container py-4">

    @if (Model == null || !Model.Any())
    {
        <div class="empty-state text-center">
            <i class="bi bi-calendar-x display-4 text-muted"></i>
            <h5 class="mt-3">Няма турнири за съдийство</h5>
            <p class="text-muted mb-0">
                Когато бъдеш назначен като съдия, турнирите ще се покажат тук.
            </p>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var e in Model)
            {
                <div class="col-12 col-sm-6 col-lg-4">
                    <div class="tournament-card h-100">

                        <div class="tournament-cover">
                            <img src="@e.ImageUrl" alt="Tournament Image" />
                            <div class="tournament-cover__overlay"></div>

                            <div class="tournament-top">
                                <span class="tournament-pill">
                                    <i class="bi bi-geo-alt-fill me-1"></i>@e.CityName
                                </span>

                                @{
                                    if (e.StartDate > DateTime.Now)
                                    {
                                        <span class="tournament-status status-upcoming">
                                            <i class="bi bi-clock-fill me-1"></i>@TournamentStatus.Upcoming
                                        </span>
                                    }
                                    else if (DateTime.Now > e.StartDate && DateTime.Now < e.EndDate)
                                    {
                                        <span class="tournament-status status-started">
                                            <i class="bi bi-play-fill me-1"></i>@TournamentStatus.Started
                                        </span>
                                    }
                                    else if (DateTime.Now > e.EndDate)
                                    {
                                        <span class="tournament-status status-finished">
                                            <i class="bi bi-flag-fill me-1"></i>@TournamentStatus.Finished
                                        </span>
                                    }
                                }
                            </div>
                        </div>

                        <div class="p-3">
                            <div class="tournament-meta">
                                <div class="tmeta">
                                    <i class="bi bi-calendar-event-fill me-2"></i>
                                    <span class="fw-bold me-1">Start:</span> @e.StartDate
                                </div>

                                <div class="tmeta">
                                    <i class="bi bi-calendar-check-fill me-2"></i>
                                    <span class="fw-bold me-1">End:</span> @e.EndDate
                                </div>

                                <div class="tmeta">
                                    <i class="bi bi-people-fill me-2"></i>
                                    <span class="fw-bold me-1">Teams:</span> @($"{e.NumberOfTeams} / 16")
                                </div>
                            </div>

                            <a asp-controller="Referee"
                               asp-action="LeaveTournament"
                               asp-route-id="@e.Id"
                               class="btn btn-warning btn-lg w-100 fw-bold tg-action-btn mt-3">
                                <i class="bi bi-box-arrow-left me-2"></i>
                                Leave Tournament
                            </a>
                        </div>

                    </div>
                </div>
            }
        </div>
    }

</section>
