@{
    ViewBag.Title = "Upload Pictures";
}

<h2 class="text-center">Upload Pictures for Tournament</h2>
<hr />

<form asp-action="UploadPictures" method="post" enctype="multipart/form-data">
    <input type="hidden" name="id" value="@ViewBag.TournamentId" />

    <div class="mb-3">
        <label class="form-label">Select pictures:</label>
        <input type="file" name="files" multiple class="form-control" />
    </div>

    <button class="btn btn-warning w-100 fw-bold">Upload</button>
</form>
