@using FootballProjectSoftUni.Core.Models.Match
@model EnterResultViewModel

@{
    ViewBag.Title = "Въведи резултат";
}

<section class="container py-4">

    <div class="text-center mb-4">
        <h2 class="page-title mb-1">
            <i class="bi bi-clipboard-check-fill me-2"></i>
            @ViewBag.Title
        </h2>
        <p class="text-muted mb-0">
            Въведи головете за двата отбора и запази резултата.
        </p>
    </div>

    <div class="admin-form-card mx-auto" style="max-width: 760px;">

        <form asp-action="EnterResult" method="post" class="admin-form">

            <input type="hidden" asp-for="MatchId" />
            <input type="hidden" asp-for="TournamentId" />
            <input type="hidden" asp-for="Team1Id" />
            <input type="hidden" asp-for="Team2Id" />
            <input type="hidden" asp-for="Team1Name" />
            <input type="hidden" asp-for="Team2Name" />

            <div class="row g-4">

                <div class="col-12 col-md-6">
                    <div class="result-team-card h-100">
                        <div class="result-team-head">
                            <div class="result-team-badge">
                                <i class="bi bi-shield-fill"></i>
                            </div>
                            <h4 class="mb-0 fw-bold">@Model.Team1Name</h4>
                        </div>

                        <div class="mb-2">
                            <label asp-for="Team1Goals" class="form-label fw-bold">
                                <i class="bi bi-dribbble me-2"></i>Голове
                            </label>
                            <input asp-for="Team1Goals"
                                   class="form-control tg-input"
                                   type="number"
                                   min="0" />
                            <span asp-validation-for="Team1Goals" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-md-6">
                    <div class="result-team-card h-100">
                        <div class="result-team-head">
                            <div class="result-team-badge">
                                <i class="bi bi-shield-fill"></i>
                            </div>
                            <h4 class="mb-0 fw-bold">@Model.Team2Name</h4>
                        </div>

                        <div class="mb-2">
                            <label asp-for="Team2Goals" class="form-label fw-bold">
                                <i class="bi bi-dribbble me-2"></i>Голове
                            </label>
                            <input asp-for="Team2Goals"
                                   class="form-control tg-input"
                                   type="number"
                                   min="0" />
                            <span asp-validation-for="Team2Goals" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

            </div>

            <button type="submit" class="btn btn-primary btn-lg w-100 fw-bold tg-action-btn mt-4">
                <i class="bi bi-save2-fill me-2"></i>
                Запази резултат
            </button>

        </form>

    </div>

</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
