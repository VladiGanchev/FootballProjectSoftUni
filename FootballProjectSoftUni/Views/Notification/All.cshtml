@using FootballProjectSoftUni.Core.Models.ContactMessage
@using FootballProjectSoftUni.Core.Models.Notification
@using X.PagedList
@model NotificationAllPageViewModel

@{
    ViewData["Title"] = "Известия и съобщения";
}

<section class="container py-4">

    @* Header + Tabs *@
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-end gap-3 mb-4">
        <div class="d-flex gap-2">
            <a asp-controller="Notification"
               asp-action="All"
               asp-route-box="inbox"
               class="btn @(Model.Box == "inbox" ? "btn-primary" : "btn-outline-primary") tg-action-btn">
                <i class="bi bi-inbox-fill me-2"></i>Входящи
            </a>

            <a asp-controller="Notification"
               asp-action="All"
               asp-route-box="sent"
               class="btn @(Model.Box == "sent" ? "btn-primary" : "btn-outline-primary") tg-action-btn">
                <i class="bi bi-send-fill me-2"></i>Изпратени
            </a>
        </div>
    </div>

    @* SENT BOX *@
    @if (Model.Box == "sent")
    {
        <div class="tg-table-card">
            <div class="p-3 border-bottom" style="background: rgba(0,0,0,.02);">
                <h5 class="mb-0 fw-bold">
                    <i class="bi bi-send-check-fill me-2"></i>
                    Изпратени съобщения
                </h5>
            </div>

            @if (Model.SentMessages == null || !Model.SentMessages.Any())
            {
                <div class="p-4">
                    <div class="empty-state text-center">
                        <i class="bi bi-envelope display-4 text-muted"></i>
                        <h5 class="mt-3">Нямате изпратени съобщения</h5>
                        <p class="text-muted mb-0">Когато изпратите съобщение, ще се появи тук.</p>
                    </div>
                </div>
            }
            else
            {
                var paged = (IPagedList<SentMessageViewModel>)Model.SentMessages;

                <div class="list-group list-group-flush">
                    @foreach (var msg in paged)
                    {
                        <div class="list-group-item d-flex justify-content-between align-items-start gap-3">
                            <div>
                                <a asp-controller="ContactMessage"
                                   asp-action="OpenMessage"
                                   asp-route-messageId="@msg.Id"
                                   class="tg-msg-link">
                                    <i class="bi bi-envelope-check-fill me-2 text-success"></i>
                                    @msg.Subject
                                </a>

                                <div class="text-muted small mt-1">
                                    <i class="bi bi-person-check-fill me-2"></i>
                                    Изпратено към: <strong>@msg.ToName</strong>
                                </div>

                                <div class="text-muted small mt-1">
                                    <i class="bi bi-calendar-event-fill me-2"></i>
                                    @msg.CreatedOn.ToLocalTime().ToString("g")
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <nav class="mt-3 mb-3" aria-label="Page navigation">
                    <ul class="pagination justify-content-center tg-pagination">
                        @{
                            var nextPage = paged.PageNumber + 1;
                            var previousPage = paged.PageNumber - 1;
                        }

                        <li class="page-item @(paged.HasPreviousPage ? "" : "disabled")">
                            <a class="page-link"
                               href="@Url.Action("All", new { box = "sent", page = previousPage })"
                               tabindex="-1">
                                <i class="bi bi-chevron-left"></i>
                            </a>
                        </li>

                        @for (int i = 1; i <= paged.PageCount; i++)
                        {
                            <li class="page-item @(i == paged.PageNumber ? "active" : "")">
                                <a class="page-link"
                                   href="@Url.Action("All", new { box = "sent", page = i })">@i</a>
                            </li>
                        }

                        <li class="page-item @(paged.HasNextPage ? "" : "disabled")">
                            <a class="page-link"
                               href="@Url.Action("All", new { box = "sent", page = nextPage })">
                                <i class="bi bi-chevron-right"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            }
        </div>
    }
    else
    {
        @* INBOX BOX *@
        <div class="tg-table-card">
            <div class="p-3 border-bottom" style="background: rgba(0,0,0,.02);">
                <h5 class="mb-0 fw-bold">
                    <i class="bi bi-bell-fill me-2"></i>
                    Входящи нотификации
                </h5>
            </div>

            @if (Model.Notifications == null || !Model.Notifications.Any())
            {
                <div class="p-4">
                    <div class="empty-state text-center">
                        <i class="bi bi-bell-slash display-4 text-muted"></i>
                        <h5 class="mt-3">Нямате нотификации</h5>
                        <p class="text-muted mb-0">Когато има нови събития, ще ги виждате тук.</p>
                    </div>
                </div>
            }
            else
            {
                var paged = (IPagedList<NotificationViewModel>)Model.Notifications;

                <div class="list-group list-group-flush">
                    @foreach (var notification in paged)
                    {
                        <div class="list-group-item d-flex justify-content-between align-items-start gap-3 notification-item @(notification.IsRead ? "is-read" : "is-unread")">
                            <div>
                                @if (notification.ContactMessageId != null)
                                {
                                    <a asp-controller="ContactMessage"
                                       asp-action="OpenMessage"
                                       asp-route-messageId="@notification.ContactMessageId"
                                       class="tg-msg-link">
                                        @notification.Message
                                    </a>

                                    @if (!string.IsNullOrWhiteSpace(notification.FromName))
                                    {
                                        <div class="text-muted small mt-1">
                                            <i class="bi bi-person-fill me-2"></i>
                                            Получено от: <strong>@notification.FromName</strong>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="fw-semibold">@notification.Message</div>
                                }

                                <div class="text-muted small mt-1">
                                    <i class="bi bi-calendar-event-fill me-2"></i>
                                    @notification.CreatedOn.ToLocalTime().ToString("g")
                                </div>
                            </div>

                            <div class="d-flex align-items-center gap-2">
                                @if (!notification.IsRead)
                                {
                                    <span class="badge bg-primary">New</span>
                                }

                                <form asp-controller="Notification"
                                      asp-action="Delete"
                                      method="post"
                                      onsubmit="return confirm('Сигурен ли си, че искаш да изтриеш тази нотификация?');">
                                    <input type="hidden" name="id" value="@notification.Id" />
                                    <input type="hidden" name="box" value="@Model.Box" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash3"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    }
                </div>

                <nav class="mt-3 mb-3" aria-label="Page navigation">
                    <ul class="pagination justify-content-center tg-pagination">
                        @{
                            var nextPage = paged.PageNumber + 1;
                            var previousPage = paged.PageNumber - 1;
                        }

                        <li class="page-item @(paged.HasPreviousPage ? "" : "disabled")">
                            <a class="page-link"
                               href="@Url.Action("All", new { box = "inbox", page = previousPage })"
                               tabindex="-1">
                                <i class="bi bi-chevron-left"></i>
                            </a>
                        </li>

                        @for (int i = 1; i <= paged.PageCount; i++)
                        {
                            <li class="page-item @(i == paged.PageNumber ? "active" : "")">
                                <a class="page-link"
                                   href="@Url.Action("All", new { box = "inbox", page = i })">@i</a>
                            </li>
                        }

                        <li class="page-item @(paged.HasNextPage ? "" : "disabled")">
                            <a class="page-link"
                               href="@Url.Action("All", new { box = "inbox", page = nextPage })">
                                <i class="bi bi-chevron-right"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            }
        </div>
    }

</section>
