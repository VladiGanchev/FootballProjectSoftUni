@{
    ViewData["Title"] = "Access Denied";
}

<section class="container py-5">

    <div class="admin-form-card mx-auto text-center">

        <div class="delete-icon mb-3">
            <i class="bi bi-shield-lock-fill"></i>
        </div>

        <h2 class="page-title text-danger mb-2">
            Access Denied
        </h2>

        <p class="text-muted mb-4">
            Oops, you don't have permission to access this page.
        </p>

        <div class="access-image mb-4">
            <img src="https://media.istockphoto.com/photos/rubber-stamp-picture-id545992942?k=6&m=545992942&s=612x612&w=0&h=XD1kddQeDrbG9DEQQxGNf6_3snw4gdFZv8GqSFta6Is="
                 alt="Access denied"
                 class="img-fluid rounded shadow-sm" />
        </div>

        <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
            <a asp-controller="Home"
               asp-action="Index"
               class="btn btn-primary btn-lg tg-action-btn px-4">
                <i class="bi bi-house-fill me-2"></i>
                Go to Home
            </a>

            <button onclick="history.back()"
                    class="btn btn-outline-secondary btn-lg px-4">
                <i class="bi bi-arrow-left me-2"></i>
                Go Back
            </button>
        </div>

    </div>

</section>
