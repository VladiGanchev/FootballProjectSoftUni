@using FootballProjectSoftUni.Core.Models.Referee;
@model RefereeFormViewMOdel
@{
    ViewBag.Title = "Become Referee";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="BecomeReferee" method="post">
            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label-add-edit">Full Name</label>
                <input asp-for="@Model.Name" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Birthdate" class="form-label-add-edit">Birthdate</label>
                <input asp-for="@Model.Birthdate" class="form-control" aria-required="true" value="@DateTime.Now.ToString("dd/MM/yyyy HH:mm")" />
                <span asp-validation-for="@Model.Birthdate" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Experience" class="form-label-add-edit">Experience</label>
                <input asp-for="@Model.Experience" class="form-control" />
                <span asp-validation-for="@Model.Experience" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-warning mb-2 w-100 p-3 fw-bold" type="submit" value="Add" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
