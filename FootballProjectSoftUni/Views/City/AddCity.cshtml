@using FootballProjectSoftUni.Core.Models.City
@model CityViewModel

@{
    ViewBag.Title = "Create a New City";
}

<section class="container py-4">

    <div class="text-center mb-4">
        <h2 class="page-title mb-1">
            <i class="bi bi-building-add me-2"></i>
            @ViewBag.Title
        </h2>
        <p class="text-muted mb-0">
            Добави град с име и снимка, за да може потребителите да разглеждат турнири по локация.
        </p>
    </div>

    <div class="admin-form-card mx-auto">
        <partial name="_CityFormPartial" model="@Model" />
    </div>

</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
